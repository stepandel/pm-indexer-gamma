      "types": "./dist/config/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@prediction-markets/tsconfig": "workspace:*",
    "@types/pg": "^8.15.5",
    "@vitest/ui": "^4.0.0",
    "typescript": "^5.9.2",
