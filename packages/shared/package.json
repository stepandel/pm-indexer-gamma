      "types": "./dist/index.d.ts"
    },
    "./lib": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./platforms": {
      "import": "./dist/platforms/index.js",
      "types": "./dist/platforms/index.d.ts"
    },
